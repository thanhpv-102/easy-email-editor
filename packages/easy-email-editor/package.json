{
  "name": "@thanhpv102/easy-email-editor",
  "license": "MIT",
  "description": "Email editor",
  "version": "4.19.3",
  "author": "m-Ryan",
  "repository": {
    "type": "git",
    "url": "git@github.com:zalify/easy-email.git"
  },
  "keywords": [
    "email editor core"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "vite",
    "typings": "tsc --declaration --emitDeclarationOnly --project tsconfig.lib.json && tsc-alias -p tsconfig.alias.json",
    "build": "rimraf lib && npm run typings && vite build --config vite.config.ts",
    "format": "eslint --fix  --ext .tsx,.ts,.tsx src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}, example/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "is-hotkey": "^0.2.0",
    "lodash": "^4.17.23",
    "react-hook-form": "^7.54.2",
    "react-use": "^17.3.1"
  },
  "devDependencies": {
    "@types/is-hotkey": "^0.1.7",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.12.12",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-webpack-plugin": "^4.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "mjml-browser": "^4.15.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "sass": "^1.83.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2",
    "vite": "^7.1.11"
  },
  "peerDependencies": {
    "@thanhpv102/easy-email-core": "^4.19.3",
    "mjml-browser": "^4.10.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "gitHead": "2a08e8af15766344de708d891c1c8ea31bb77646"
}
