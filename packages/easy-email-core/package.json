{
  "name": "@thanhpv102/easy-email-core",
  "license": "MIT",
  "description": "Email editor",
  "version": "4.19.5",
  "author": "m-Ryan",
  "repository": {
    "type": "git",
    "url": "git@github.com:zalify/easy-email.git"
  },
  "keywords": [
    "email editor core"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "yarn build --watch",
    "typings": "tsc --declaration --emitDeclarationOnly --project tsconfig.lib.json",
    "build": "rimraf lib  && npm run typings && tsc-alias  && vite build --config vite.config.ts",
    "block": "ts-node -r tsconfig-paths/register scripts/generateBlockJSX.ts",
    "format": "eslint --fix  --ext .tsx,.ts,.tsx src/",
    "test": "jest  --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}, example/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@types/he": "^1.2.3",
    "@types/jest": "^29.5.14",
    "@types/js-beautify": "^1.14.3",
    "@types/jsdom": "^21.1.7",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.12.12",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-webpack-plugin": "^4.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jest": "^29.7.0",
    "jsdom": "^26.0.0",
    "liquidjs": "^10.19.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.11"
  },
  "dependencies": {
    "he": "^1.2.0",
    "js-beautify": "^1.15.1",
    "lodash": "^4.17.23",
    "uuid": "^10.0.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "gitHead": "f6cf54160ffdba0d4d6b23483293dd9190d2d2c2"
}
